
@{
    Layout = null;
    ViewBag.Title = "Index";
}


@Html.Action("GetDayTop")
<div>
    @using (Ajax.BeginForm("GetDayTop", new AjaxOptions
    {
        UpdateTargetId = "results"
    }))
    {
        <input type="hidden" value="all" name="type" />
        <input type="submit" value="All time" />
    }
    @using (Ajax.BeginForm("GetDayTop", new AjaxOptions
    {
        UpdateTargetId = "results"
    }))
    {
        <input type="hidden" value="week" name="type" />
        <input type="submit" value="Week" />
    }
    
    <div id="results"></div>
</div>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")